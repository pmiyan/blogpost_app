<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>
      <%= link_to "Show this blog", blog %>
      <%= button_to "Delete this blog", blog, method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New blog", new_blog_path %>
